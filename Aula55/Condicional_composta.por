programa
{
	// Dado um número verificar se ele é par ou impar.
	funcao inicio()
	{
		inteiro numero

		escreva("Digite um número: ")
		leia(numero)

		se (numero % 2 == 0)
		{
			escreva("\nO número ",numero," é par.\n")
		}
		senao
		{
			escreva("\nO número ",numero," é impar.\n")
		}
	}
}
